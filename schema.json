{
    "boards": {
        "$uid(board)" : {
            "title": "title",
            "description": "description",
            "owner": "$uid",
            "users": {
                "$uid(user)": 123456789 // user's last activity
            },
            "sessions": {
                "$uid(session)": 123456789 // session created date
            }
        }
    },
    "join-board-request": {
        "$uid(board)": { // Board owner can see its join requests.
            "uid(user)": 123456789 // date the request was generated
        }
    },
    "sessions": {
        "$uid(board)": { // permission granted based on user's access to board
            "$uid(session)": {
                "startDate": 123456789,
                "endDate": 123456789,
                "categories": {
                    "$uid(category)" : 1 // order in session
                }
            }
        }
    },
    "categories": {
        "$uid(board)": { // permission granted based on user's access to board
            "$uid(category)" : {
                "title": "title",
                "description": "description",
                "visible": true
            }
        }
    },
    "items": {
        "$uid(board)": { // permission granted based on user's access to board
            "uid(session)" : {
                "$uid(item)" : {
                    "owner": "$uid",
                    "text": "text",
                    "time": 3600, // amount of time spent discussing this item
                    "category": "$uid(category)",
                    "supporters": {
                        "$uid(user)": "shout out!" // brief reply to item text
                    },
                    "visible": false
                }
            }
        }
    },
    "notes": {
        "$uid(board)": { // permission granted based on user's access to board
            "uid(session)" : {
                "$uid(note)": {
                    "owner": "$uid(user)",
                    "text": "text",
                    "items": {
                        "$uid(item)": true
                    },
                    "visible": false
                }
            }
        }
    },
    "users": {
        "$uid(user)": {
            "name": "name",
            "boards": {
                "$uid(board)": 123456789 // date user joined the board
            }
        }
    }
}